<Window x:Class="DisplayOff.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DisplayOff"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="200"
        Loaded="Window_Loaded"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="73*"/>
        </Grid.ColumnDefinitions>
       
        <Button 
            Content="Turn off Display" 
            Width="148"
            Click="TurnOffLCD_Click" 
            HorizontalAlignment="Left"
            VerticalAlignment="Top" Height="40" Margin="27,10,0,0" Grid.ColumnSpan="2"
            
            />
        <TextBlock 
             x:Name="textBlock" 
             HorizontalAlignment="Left" 
             Margin="27,67,0,0" 
             TextWrapping="Wrap" 
             VerticalAlignment="Top" 
             Height="30" 
             Width="148"
             FontSize="12" RenderTransformOrigin="0.5,1.509" Grid.ColumnSpan="2"
             ><Run Text="F1 = Turn off display"/><LineBreak/><Run Text="Escape = Exit"/></TextBlock>
    </Grid>
</Window>
